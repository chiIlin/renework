@* Pages/Profile.cshtml *@
@page "/Profile/{username?}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model renework.Pages.ProfileModel

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

@{
    var title = Model.IsOwnProfile
        ? "My Profile"
        : $"{Model.ProfileUser.Username}'s Profile";
    var role = Model.UserRole;
}

<h1 class="text-center my-4">@title</h1>

<div class="profile-container">

    <!-- 1) CURRENT PROFILE DETAILS -->
    <section class="profile-section mb-5">
        <h2>Current Profile Details</h2>
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.ProfileUser.Username</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.FirstName))
                {
                    @Model.ProfileUser.FirstName
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Surname</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.Surname))
                {
                    @Model.ProfileUser.Surname
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.Description))
                {
                    @Model.ProfileUser.Description
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Skills</dt>
            <dd class="col-sm-9">
                @if (Model.ProfileUser.Skills?.Any() ?? false)
                {
                    <ul>
                        @foreach (var s in Model.ProfileUser.Skills)
                        {
                            <li>@s</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            @if (role == "Company" || role == "Admin")
            {
                <dt class="col-sm-3">Company</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.CompanyName))
                    {
                        @Model.ProfileUser.CompanyName
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>
            }
        </dl>
    </section>

    <!-- 2) ACCOUNT SETTINGS FOR OWNER -->
    @if (Model.IsOwnProfile)
    {
        <section class="profile-section mb-5">
            <h2>Account Settings</h2>

            <form method="post"
                  asp-page-handler="ChangeUsername"
                  asp-route-username="@Model.Username">
                @Html.AntiForgeryToken()
                <label asp-for="UsernameInput.NewUsername"></label>
                <input asp-for="UsernameInput.NewUsername" class="form-control mb-2" />
                <button class="btn btn-success">Change Username</button>
            </form>

            <form method="post"
                  asp-page-handler="ChangePassword"
                  asp-route-username="@Model.Username"
                  class="mt-4">
                @Html.AntiForgeryToken()
                <label asp-for="PasswordInput.CurrentPassword"></label>
                <input asp-for="PasswordInput.CurrentPassword"
                       type="password"
                       class="form-control mb-2" />

                <label asp-for="PasswordInput.NewPassword"></label>
                <input asp-for="PasswordInput.NewPassword"
                       type="password"
                       class="form-control mb-2" />

                <button class="btn btn-success">Change Password</button>
            </form>

            <form method="post"
                  asp-page-handler="UpdateDetails"
                  asp-route-username="@Model.Username"
                  class="mt-4">
                @Html.AntiForgeryToken()
                <label asp-for="DetailsInput.FirstName"></label>
                <input asp-for="DetailsInput.FirstName" class="form-control mb-2" />

                <label asp-for="DetailsInput.Surname"></label>
                <input asp-for="DetailsInput.Surname" class="form-control mb-2" />

                <label asp-for="DetailsInput.Description"></label>
                <textarea asp-for="DetailsInput.Description" class="form-control mb-2"></textarea>

                <label asp-for="DetailsInput.NewSkill"></label>
                <input asp-for="DetailsInput.NewSkill"
                       class="form-control mb-2"
                       placeholder="Add a new skill" />

                <label asp-for="DetailsInput.CompanyName"></label>
                <input asp-for="DetailsInput.CompanyName"
                       class="form-control mb-2"
                       placeholder="Company name (if you’re a Company/Admin)" />

                <button class="btn btn-success">Save Profile</button>
            </form>
        </section>
    }

    <!-- 3) COMPANY COURSES & ADD COURSE BUTTON -->
    @if ((role == "Company" || role == "Admin") && Model.IsOwnProfile)
    {
        <section class="profile-section mb-5">
            <h2>Manage My Courses</h2>

            <a asp-page="/AddCourse"
               class="btn btn-success btn-sm mb-3">
                Add Course
            </a>

            <ul class="list-group">
                @if (Model.CompanyCourses.Any())
                {
                    @foreach (var c in Model.CompanyCourses)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            @c.Title
                            <span>
                                <a asp-page-handler="EditCourse"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-warning">Edit</a>
                                <a asp-page-handler="DeleteCourse"
                                   asp-route-id="@c.Id"
                                   class="btn btn-sm btn-danger">Delete</a>
                            </span>
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item text-muted">No courses yet</li>
                }
            </ul>
        </section>
    }

    <!-- 4) ADMIN CONTROLS -->
    @if (role == "Admin")
    {
        <section class="profile-section mb-5">
            <h2>Admin Controls</h2>
            <a asp-page="/Admin/Users" class="btn btn-dark me-2">Manage Users</a>
            <a asp-page="/Admin/Courses" class="btn btn-dark">Manage Courses</a>
        </section>
    }

</div>
