@page "/Profile/{username?}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model renework.Pages.ProfileModel

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<h1 class="text-center my-4">
    @(
        Model.IsOwnProfile
        ? "My Profile"
        : $"{Model.ProfileUser.Username}'s Profile"
        )
</h1>

<div class="profile-container">

    <!-- 1) CURRENT PROFILE DETAILS -->
    <section class="profile-section mb-5">
        <h2>Current Profile Details</h2>
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.ProfileUser.Username</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.FirstName))
                {
                    @Model.ProfileUser.FirstName
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Surname</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.Surname))
                {
                    @Model.ProfileUser.Surname
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.Description))
                {
                    @Model.ProfileUser.Description
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            <dt class="col-sm-3">Skills</dt>
            <dd class="col-sm-9">
                @if (Model.ProfileUser.Skills?.Any() ?? false)
                {
                    <ul>
                        @foreach (var s in Model.ProfileUser.Skills)
                        {
                            <li>@s</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </dd>

            @if (Model.UserRole == "Company" || Model.UserRole == "Admin")
            {
                <dt class="col-sm-3">Company</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrWhiteSpace(Model.ProfileUser.CompanyName))
                    {
                        @Model.ProfileUser.CompanyName
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>
            }
        </dl>
    </section>

    <!-- 2) ACCOUNT SETTINGS FOR OWNER -->
    @if (Model.IsOwnProfile)
    {
        <section class="profile-section mb-5">
            <h2>Account Settings</h2>

            <form method="post" asp-page-handler="ChangeUsername" asp-route-username="@Model.Username">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="UsernameInput.NewUsername"></label>
                    <input asp-for="UsernameInput.NewUsername" class="form-control" />
                    <span asp-validation-for="UsernameInput.NewUsername" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Change Username</button>
            </form>

            <form method="post" asp-page-handler="ChangePassword" asp-route-username="@Model.Username" class="mt-4">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="PasswordInput.CurrentPassword"></label>
                    <input asp-for="PasswordInput.CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="PasswordInput.CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordInput.NewPassword"></label>
                    <input asp-for="PasswordInput.NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="PasswordInput.NewPassword" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Change Password</button>
            </form>

            <form method="post" asp-page-handler="UpdateDetails" asp-route-username="@Model.Username" class="mt-4">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="DetailsInput.FirstName"></label>
                    <input asp-for="DetailsInput.FirstName" class="form-control" />
                    <span asp-validation-for="DetailsInput.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DetailsInput.Surname"></label>
                    <input asp-for="DetailsInput.Surname" class="form-control" />
                    <span asp-validation-for="DetailsInput.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DetailsInput.Description"></label>
                    <textarea asp-for="DetailsInput.Description" class="form-control"></textarea>
                    <span asp-validation-for="DetailsInput.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DetailsInput.NewSkill"></label>
                    <input asp-for="DetailsInput.NewSkill" class="form-control" placeholder="Add a new skill" />
                    <span asp-validation-for="DetailsInput.NewSkill" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DetailsInput.CompanyName"></label>
                    <input asp-for="DetailsInput.CompanyName" class="form-control" placeholder="Company name (if Admin/Company)" />
                    <span asp-validation-for="DetailsInput.CompanyName" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Save Profile</button>
            </form>
        </section>
    }

    <!-- 3) BUSINESS MAINTENANCE -->
    @if (Model.UserRole == "Business" || Model.UserRole == "Admin")
    {
        <section class="profile-section mb-5">
            <h2>Business Profile</h2>
            <form method="post" asp-page-handler="UpdateBusiness">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label asp-for="BusinessInput.City"></label>
                    <input asp-for="BusinessInput.City" class="form-control" />
                    <span asp-validation-for="BusinessInput.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.Region"></label>
                    <input asp-for="BusinessInput.Region" class="form-control" />
                    <span asp-validation-for="BusinessInput.Region" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.Address"></label>
                    <input asp-for="BusinessInput.Address" class="form-control" />
                    <span asp-validation-for="BusinessInput.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.AreaSqm"></label>
                    <input asp-for="BusinessInput.AreaSqm" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="BusinessInput.AreaSqm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.MonthlyRevenue"></label>
                    <input asp-for="BusinessInput.MonthlyRevenue" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="BusinessInput.MonthlyRevenue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.Budget"></label>
                    <input asp-for="BusinessInput.Budget" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="BusinessInput.Budget" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.Description"></label>
                    <textarea asp-for="BusinessInput.Description" class="form-control"></textarea>
                    <span asp-validation-for="BusinessInput.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BusinessInput.DowntimeStart"></label>
                    <input asp-for="BusinessInput.DowntimeStart" type="date" class="form-control" />
                    <span asp-validation-for="BusinessInput.DowntimeStart" class="text-danger"></span>
                </div>
                <button class="btn btn-primary">Save Business Data</button>
            </form>
        </section>
    }

    <!-- 4) COMPANY COURSES & APPLICATIONS -->
    @if ((Model.UserRole == "Company" || Model.UserRole == "Admin") && Model.IsOwnProfile)
    {
        <section class="profile-section mb-5">
            <h2>Manage My Courses</h2>
            <a asp-page="/AddCourse" class="btn btn-add">Add Course</a>
            <a asp-page="/Applications" class="btn btn-primary btn-add">View Applications</a>
            <table class="course-table">
                <thead>
                    <tr><th>Title</th><th>Actions</th></tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.CompanyCourses)
                    {
                        <tr>
                            <td>@c.Title</td>
                            <td>
                                <a asp-page-handler="EditCourse" asp-route-id="@c.Id" class="btn btn-edit">Edit</a>
                                <a asp-page-handler="DeleteCourse" asp-route-id="@c.Id" class="btn btn-delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    }

    <!-- 5) ADMIN CONTROLS -->
    @if (Model.UserRole == "Admin")
    {
        <section class="profile-section mb-5">
            <h2>Admin Controls</h2>
            <a asp-page="/Admin/Users" class="btn btn-dark me-2">Manage Users</a>
            <a asp-page="/Admin/Courses" class="btn btn-dark">Manage Courses</a>
        </section>
    }

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
