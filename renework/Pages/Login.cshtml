@page "/Login"
@model renework.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RENEWORK</title>
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@400;500;600&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <a href="/" class="back-arrow" aria-label="Back to Home">&larr;</a>
    <div class="login-page">
        <div class="login-container">
            <div class="login-container-top">
                <div class="logo-section">
                    <img src="~/Assets/logo.png" alt="RENEWORK" class="logo" />
                    <h1 class="brand-name">RENEWORK</h1>
                </div>

                <h2 class="login-title">LOGIN</h2>

                <form method="post" class="login-form">
                    @* Preserve the ReturnUrl query parameter *@
                    <input type="hidden" asp-for="ReturnUrl" />

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <div class="form-group">
                        <label for="email" class="form-label">Email:</label>
                        <input asp-for="Input.Email" class="form-control" required />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password:</label>
                        <input asp-for="Input.Password" type="password" class="form-control" required />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="login-btn">LOGIN</button>
                    </div>
                </form>

                <div class="separator">
                    <span>OR</span>
                </div>

                <button class="google-btn">GOOGLE</button>
            </div>
            <div class="login-links">
                <div class="create-account">
                    <a href="/Register">Don't have an account?</a>
                </div>
                <div class="forgot-password">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
        </div>

        <div class="auth-image">
            <img src="~/Assets/image_auth.png" alt="Work remotely" />
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
