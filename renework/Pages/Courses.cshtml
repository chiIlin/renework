@page "/courses"
@model renework.Pages.CoursesModel
@using renework.MongoDB.Collections

@section Styles {
    <link rel="stylesheet" href="~/css/courses.css" />
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@400;700&display=swap" rel="stylesheet" />
}

<div class="courses-page">
    <h1 class="courses-header">Courses</h1>
    <div class="courses-list">
        @foreach (var c in Model.Courses)
        {
            <div class="course-card">
                <div class="course-info">
                    <h2 class="course-title">
                        Course “@c.Title”
                        <small class="course-company">by @c.Company</small>
                    </h2>
                    <p class="course-learn"><strong>Learn:</strong> @c.Tags.FirstOrDefault()</p>
                    <p class="course-duration"><strong>Duration:</strong> @c.Duration</p>
                </div>
                <div class="course-meta">
                    <span class="course-progress">Progress: 0%</span>
                    <a asp-page="/course" asp-route-id="@c.Id" class="btn view-details">VIEW DETAILS</a>
                </div>
            </div>
        }
    </div>
</div>
