@page
@model renework.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="my-4">Create Account</h1>

<form method="post" class="mx-auto" style="max-width:400px;">
    <div class="mb-3">
        <label asp-for="Input.Username" class="form-label">Username</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" type="email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Password</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <fieldset class="mb-4">
        <legend>Account Type</legend>
        <div class="form-check">
            <input asp-for="Input.SelectedRole" class="form-check-input" type="radio" value="user" checked />
            <label class="form-check-label">Individual</label>
        </div>
        <div class="form-check">
            <input asp-for="Input.SelectedRole" class="form-check-input" type="radio" value="business" />
            <label class="form-check-label">Business</label>
        </div>
        <div class="form-check">
            <input asp-for="Input.SelectedRole" class="form-check-input" type="radio" value="company" />
            <label class="form-check-label">Company</label>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary w-100">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
